{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "rootDir": "./",
        "resolveJsonModule": true
    },
    "include": [
        "server.ts",
        "routes/**/*.ts"
    ]
}